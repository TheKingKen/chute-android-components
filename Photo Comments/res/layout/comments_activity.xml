<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:id="@+id/relativeLayout">
	<TextView android:layout_alignParentLeft="true"
		android:layout_alignParentTop="true" android:id="@+id/titleView"
		android:layout_height="wrap_content" android:layout_width="fill_parent" />
	<ListView android:layout_alignParentLeft="true"
		android:layout_below="@+id/titleView" android:layout_height="wrap_content"
		android:layout_width="fill_parent" android:id="@+id/listView"
		android:layout_above="@+id/linearLayoutComment" android:padding="10dp">
	</ListView>
	<LinearLayout android:layout_alignParentLeft="true"
		android:layout_alignParentBottom="true" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:id="@+id/linearLayoutComment"
		android:paddingLeft="5dp" android:paddingBottom="10dp"
		android:paddingTop="10dp">
		<EditText android:layout_width="wrap_content"
			android:layout_weight="1" android:layout_height="wrap_content"
			android:inputType="textMultiLine" android:id="@+id/editTextComment"
			android:layout_gravity="center" android:paddingLeft="15dp"
			android:paddingRight="15dp">
		</EditText>
		<Button android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:id="@+id/buttonSave"
			android:text="@string/save" android:layout_gravity="center"></Button>
	</LinearLayout>
</RelativeLayout>