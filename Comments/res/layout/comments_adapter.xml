<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="wrap_content">
	<ImageView android:layout_alignParentTop="true"
		android:layout_alignParentLeft="true" android:scaleType="centerCrop"
		android:id="@+id/imageViewThumb" android:padding="2dp"
		android:background="@color/black" android:layout_width="50dp"
		android:layout_height="50dp"></ImageView>
	<TextView android:layout_height="wrap_content" android:text="TextView"
		android:layout_width="wrap_content" android:layout_alignBaseline="@+id/textViewName"
		android:layout_alignParentRight="true" android:id="@+id/textViewDate"
		android:layout_alignParentTop="@+id/textViewName" android:textSize="10sp"></TextView>
	<TextView android:layout_height="wrap_content" android:text="TextView"
		android:layout_width="wrap_content" android:id="@+id/textViewName"
		android:layout_alignTop="@+id/imageViewThumb"
		android:layout_toRightOf="@+id/imageViewThumb"
		android:layout_marginLeft="5dp" android:textSize="10sp"></TextView>
	<TextView android:layout_height="wrap_content" android:text="TextView"
		android:layout_width="wrap_content" android:layout_alignLeft="@+id/textViewName"
		android:layout_alignRight="@+id/textViewDate" android:id="@+id/textViewComment"
		android:textSize="12sp" android:layout_below="@+id/textViewDate"
		android:layout_marginTop="2dp"></TextView>
</RelativeLayout>
